<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   <!-- namespace:命名空间 -->
<mapper namespace="cn.acyou.iblog.mappers.UserMapper">
	<select id="findUserByUserName" parameterType="String" resultType="cn.acyou.iblog.model.User">
		SELECT
			*
		FROM
			ib_user
		WHERE
			username = #{username}
	</select>
	<select id="findUserBuUid" parameterType="integer" resultType="cn.acyou.iblog.model.User">
		SELECT
			*
		FROM
			ib_user
		WHERE
			uid = #{uid}
	</select>
	<!-- 添加用户 -->
	<insert id="addUser" parameterType="cn.acyou.iblog.model.User">
		INSERT INTO ib_user ( uid, username, password, nickname, role, enable, photo, email, description, createtime ) 
			VALUE ( #{uid}, #{username},#{password},#{nickname},#{role},#{enable},#{photo},#{email},#{description},default )
	</insert>

	<select id="findUserByEmail" parameterType="string" resultType="string">
		SELECT email FROM ib_user WHERE email = #{email}
	</select>
	
</mapper>